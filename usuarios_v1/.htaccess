<IfModule mod_headers.c>
  # Deshabilitar caché para HTML, PHP y archivos dinámicos
  <FilesMatch "\.(html|htm|php)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
  </FilesMatch>

  # Habilitar caché para archivos estáticos (JS, CSS, imágenes)
  <FilesMatch "\.(js|css|jpg|jpeg|png|gif|webp)$">
    Header set Cache-Control "max-age=604800, public"
  </FilesMatch>
</IfModule>

# Deshabilitar ETags
FileETag None
